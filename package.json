{
  "name": "dlite",
  "pkgName": "dlite",
  "version": "0.16.1",
  "author": "adamghill",
  "license": "MIT",
  "description": "A tiny, blazing fast view library that creates reactive Web Components.",
  "main": "dist/dlite.es.js",
  "module": "dist/dlite.es.js",
  "type": "module",
  "files": [
    "dist",
    "src",
    "docs/source"
  ],
  "keywords": [
    "reactive",
    "bind",
    "view",
    "templating",
    "directives",
    "dom"
  ],
  "scripts": {
    "size": "gzip-size ./dist/dlite.es.js --include-original && echo `brotli dist/dlite.es.js -c | wc -c | numfmt --to=iec --suffix=B --format='%.2f'` '(brotli)'",
    "check-size": "gzip-size ./dist/dlite.es.js --raw",
    "ts": "tsc",
    "t": "vitest run",
    "tw": "vitest",
    "b": "npm run build && stat -f%z dist/dlite.es.js | numfmt --to=iec --suffix=B --format='%.2f' && npm run size",
    "build": "rollup -c",
    "r": "DEV_SERVER_PORT=4000 DEV_SERVER_ROOT=site dev-server",
    "sb": "poetry run sphinx-build -W -b dirhtml docs/source docs/build && rsync -a --exclude='.*/' --exclude='_sources/' docs/build/ site/",
    "sa": "poetry run sphinx-autobuild -W -b dirhtml docs/source docs/build"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamghill/dlite.git"
  },
  "bugs": {
    "url": "https://github.com/adamghill/dlite/discussions"
  },
  "homepage": "https://github.com/adamghill/dlite",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "cross-var": "^1.1.0",
    "gh-pages": "^2.0.1",
    "gzip-size-cli": "^5.1.0",
    "jsdom": "^21.1.0",
    "mutationobserver-shim": "^0.3.3",
    "rollup": "^3.13.0",
    "rollup-plugin-banner2": "^1.2.2",
    "@rollup/plugin-terser": "^0.4.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4"
  },
  "dependencies": {
  }
}
